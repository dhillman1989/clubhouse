<%- include ../partials/header %>
<form class="form form--column" action="" method="POST">
  <% if (typeof(errors) !== "undefined" ){ %>
  <div class="errors">
    <% errors.map(err => { %>
    <p class="errors__error"><%= err.msg %></p>
    <%})%>
  </div>

  <%}%>
  <label for="username">Username: </label>
  <input type="text" class="form__input" name="username" id="username" />
  <label for="email">Email: </label>
  <input type="email" class="form__input" name="email" id="email" />
  <label for="password">Password: </label>
  <input type="password" class="form__input" name="password" id="password" />
  <label for="confirmPassword">Confirm Password </label>
  <input
    type="password"
    class="form__input"
    name="confirmPassword"
    id="confirmPassword"
  />
  <button class="button button--primary">Sign Up Now</button>
</form>
<%- include ../partials/footer %>
